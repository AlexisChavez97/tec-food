<div class = "text-left">  
  <%= link_to '< Go back', buyers_menu_path, class: 'mb-3 back d-inline-block' %>
</div>
<div>
  <span class="title align-center"><%= @store.name %></span>
</div>
<div>
  <span class="description align-center"><%= @store.description %></span>
</div>

<div class="row">
  <% @products.each do |product| %>
    <div class="p-2 col-sm-12 col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to product.name, order_product_path, class: 'product-title' %>
          </h5>
          <div class= 'product-image'>
            <%= image_tag product.image %>
          </div>
          <p class="card-text">
            <%= product.price %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
