<div class="row-md-2 offset-lg-5">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">
          <%= @product.name %>
        </h5>
        <div class= 'product-image'>
          <%= image_tag @product.image %>
        </div>
        <p class="card-text">
          <%= @product.price %>
        </p>

      </div>
    </div>
  </div>
  <%= link_to 'Regresar', store_path(@store), class: 'btn btn-primary mt-4' %>
</div>
