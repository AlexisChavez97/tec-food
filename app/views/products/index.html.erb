<div class="row">
  <div class="col-sm-12 col-md-3">
    <%= link_to '+ Add product', new_product_path, class: 'btn btn-light w-100 my-3' %>
  </div>
</div>
<div class="row">
  <% @products.each do |product| %>
    <div class="p-2 col-sm-12 col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">
            <%= product.name %>
          </h5>
          <div class= 'product-image'>
            <%= image_tag product.image %>
          </div>
          <h6 class="card-subtitle mb-2 text-muted">
            <%= product.description %>
          </h6>
          <p class="card-text">
            <%= product.price %>
          </p>
          <%= link_to 'Editar', edit_product_path(product), class: 'btn  btn-primary' %>
          <%= link_to 'Eliminar', product_path(product), method: :delete, class: 'card-link' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
